{
    "name": "mrdionjr/elephanto",
    "type": "library",
    "description": "A promise-based HTTP Client for PHP",
    "keywords": [
        "mrdionjr",
        "elephanto"
    ],
    "homepage": "https://github.com/mrdionjr/elephanto",
    "license": "MIT",
    "authors": [
        {
            "name": "Salomon Dion",
            "email": "dev.mrdion@gmail.com",
            "homepage": "https://github.com/mrdionjr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-curl": "*",
        "guzzlehttp/promises": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Elephanto\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elephanto\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
